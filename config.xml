<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.calebwin.sorted" versionCode="2" version="1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Sorted : A Recycling App for King County</name>

    <description>
        The #1 Recycling App for King County.
    </description>

    <author href="https://calebwin.github.io" email="calebhwin@gmail.com">
        Caleb Winston
    </author>

    <icon src="www/res/logo.png" />
    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="android-build-tool" value="gradle" />
    <plugin name="cordova-plugin-headercolor" />
    <preference name="HeaderColor" value="#66bb6a" />
    <plugin name="cordova-plugin-statusbar" />
    <plugin name="cordova-plugin-whitelist" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-navigation href="data:*" />
    <allow-intent href="*" />
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <allow-intent href="*://*.github.io/*" />
    <preference name="stay-in-webview" value="false" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" />
    <preference name="StatusBarOverlaysWebView" value="true" source="npm" />
    <preference name="StatusBarBackgroundColor" value="#338a3e" />

    <!-- to enable individual permissions use the following examples -->
</widget>
